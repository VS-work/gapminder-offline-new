sleep 2

if [ -d "cache-app" ]; then
  cp -R ./cache-app/Gapminder\ Offline.app ../../..
  rm -rf ./cache-app
fi

if [ -d "cache-ds" ]; then
  cd cache-ds
  mv ddf--gapminder--systema_globalis* ddf--gapminder--systema_globalis
  cp -R ./ddf--gapminder--systema_globalis ..
  cd ..
  rm -rf ./cache-ds
fi

rm ./update-required
rm ./updating
sleep 1
../../Contents/MacOS/Gapminder\ Offline &
